<!-- ViewFirst data -->
<div class="vfpage" query="{{query}}" language="{{language}}" type="{{type}}" contextLocator="{{contextLocator}}" locator="{{locator}} rootLocator="{{rootLocator}}"></div>

<div class="tab-content">

    <div id="topic" class="tab-pane fade in active">

        <div class="row">
            <div class="home col-xs-8 col-sm-8 ">
                <img src="{{lIco}}" >
                <h2>{{label}}</h2>
                <p class="blog-post-meta">
                    <div class="userref">
                        <a href="/user/{{userid}}">{{username}}</a>&nbsp;&nbsp;{{date}}<br/>
                    </div>
                    <div class="urlref"><a href="{{url}}">{{url}}</a></div>
                </p>
                <div class="body pre-scrollable span12" style="border: 1px solid #e1e1e8; resize:both;overflow: auto;">
                    {{{details}}}
                </div>
                <div class="transclude"></div>
            </div> <!-- /col 8 -->
            <div class="col-xs-4 col-sm-4">
                {{#if showTags}}
                    <h3>Tags</h3>
                    <div class="taglist pre-scrollable">
                        {{#each tags}}
                            <a href="/tag/{{lox}}"><img src="{{sIco}}"> {{label}}</a><br/>
                        {{/each}}
                    </div>
                {{/if}}
                {{#if showUsers}}
                    <h3>Users</h3>
                    <div class="userlist pre-scrollable">
                        {{#each users}}
                            <a href="/user/{{lox}}"><img src="{{sIco}}"> {{label}}</a><br/>
                        {{/each}}
                    </div>
                {{/if}}
                {{#if showDocs}}
                    <h3>Documents</h3>
                    <div class="doclist pre-scrollable">
                        {{#each documents}} <!-- TODo: we are punting to Topic display -->
                            {{#if isBlogType}}
                                <a href="/blog/{{lox}}"><img src="{{sIco}}"> {{label}}</a><br/>
                            {{else}}
                                {{#if isWikiType}}
                                    <a href="/wiki/{{lox}}"><img src="{{sIco}}"> {{label}}</a><br/>
                                {{else}}
                                    {{#if isBookmark}}
                                        <a href="/bookmark/{{lox}}"><img src="{{sIco}}"> {{label}}</a><br/>
                                    {{else}}
                                        <a href="/topic/{{lox}}"><img src="{{sIco}}"> {{label}}</a><br/>
                                    {{/if}}
                                {{/if}}
                            {{/if}}
                        {{/each}}
                    </div>
                {{/if}}
                {{#if showTranscludes}}
                    <h3>Transcludes</h3>
                    <div class="transcludelist pre-scrollable">
                        {{#each transcludes}} <!-- TODo: we are punting to Topic display -->

                            <a href="/topic/{{lox}}"><img src="{{sIco}}"> {{label}}</a><br/>
                        {{/each}}

                    </div>
                {{/if}}
            </div> <!-- /col 4 -->
        </div> <!-- /row -->
    </div> <!-- /topic -->
    <div id="list" class="tab-pane fade">
        <div class="blog-post col-xs-7">
            <h2>{{label}}</h2>
            <p class="blog-post-meta">
                <div class="userref">
                    <a href="/user/{{userid}}">{{username}}</a>&nbsp;&nbsp;{{date}}<br/>
                </div>
                <div class="urlref"><a href="{{url}}">{{url}}</a></div>
            </p>
            <div class="body pre-scrollable" style="border: 1px solid #e1e1e8;">{{{details}}}</div>
            {{#if showTags}}
                <h3>Tags</h3>
                <div class="taglist pre-scrollable">
                    {{#each tags}}
                        <a href="/tag/{{lox}}"><img src="{{sIco}}"> {{label}}</a><br/>
                    {{/each}}
                </div>
            {{/if}}
            {{#if showUsers}}
                <h3>Users</h3>
                <div class="userlist pre-scrollable">
                    {{#each users}}
                        <a href="/user/{{lox}}"><img src="{{sIco}}"> {{label}}</a><br/>
                    {{/each}}
                </div>
            {{/if}}
            {{#if showDocs}}
                <h3>Documents</h3>
                <div class="doclist pre-scrollable">
                    {{#each documents}} <!-- TODo: we are punting to Topic display -->
                        <a href="/topic/{{lox}}"><img src="{{sIco}}"> {{label}}</a><br/>
                    {{/each}}
                </div>
            {{/if}}
            {{#if showTranscludes}}
                <h3>Transclusions</h3>
                <div class="transcludelist pre-scrollable">
                    {{#each transcludes}} <!-- TODo: we are punting to Topic display -->
                        <a href="/topic/{{lox}}"><img src="{{sIco}}"> {{label}}</a><br/>
                    {{/each}}

                </div>
            {{/if}}
        </div>
    </div> <!-- /list -->
    <div id="cconv" class="tab-pane fade">
        <div class="ccontable pre-scrollable" style="border: 1px solid #e1e1e8;"></div>
    </div> <!-- /cconv -->
    <div id="pconv" class="tab-pane fade">
        <div class="pcontable pre-scrollable" style="border: 1px solid #e1e1e8;"></div>
    </div> <!-- /pconv -->

    <div id="source" class="tab-pane fade">
        <div class="sourcecode">{{source}}</div>
    </div>
    <div id="relations" class="tab-pane fade">
        <h1>Connections</h1>
        <div class="newreln"></div>
        <div class="relationlist"></div>
    </div> <!-- /relations -->
    <div id="tree" class="tab-pane fade">
        <div id="jstree_div"></div>
    </div> <!-- /tree -->

</div>